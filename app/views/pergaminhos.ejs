<div id="pergaminhos">
	<h3>Pergaminhos</h3>

	<ul>
		<% for(var i = 0; i < acoes.length; i++){ %>
			<%
				var txt_acao = '';

				switch(parseInt(acoes[i].acao)){
					case 1: txt_acao = 'Coletar Recurso(s)'; break;
					case 2: txt_acao = 'Enforcamento(s) Programados';break;
					case 3: txt_acao = 'Aldeão(ões) em Treinamento de História';break;
					case 4: txt_acao = 'Aldeão(ões) em Treinamento de Magia';break;
				}

				var data = new Date();
				var momento_atual = data.getTime();

				var tempo_restante = Math.round((acoes[i].acao_termina_em - momento_atual) / 1000);

			%>
			<li><%= acoes[i].quantidade %> <%= txt_acao %>
				<small>restam <span class="tempo_restante"><%= tempo_restante %></span>
					segundos - <a href="/remover_ordem?id_acao=<%= acoes[i]._id %>">revogar ordem</a></small>

			</li>
		<% } %>
	</ul>
</div>
